{
  "openapi": "3.0.3",
  "info": {
    "title": "World Campus API",
    "description": "API endpoints for World Campus.",
    "contact": {
      "name": "Support",
      "url": "https://github.com/PSU-OOE/wcapi/issues"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://test.worldcampus.psu.edu/api/v1/crm_export"
    },
    {
      "url": "https://www.worldcampus.psu.edu/api/v1/crm_export"
    }
  ],
  "paths": {
    "/webform": {
      "get": {
        "summary": "Retrieve webform submissions",
        "description": "Retrieve webform submissions by last ID and optionally by fields present on the submission.",
        "operationId": "getWebformSubmissions",
        "tags": [
          "Webform submissions"
        ],
        "parameters": [
          {
            "name": "last_id",
            "in": "query",
            "description": "The ID of the last successfully retrieved submission.",
            "required": true,
            "explode": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "form_fields",
            "in": "query",
            "description": "An optional semicolon delimited list of form fields that if all are present in a submission, will cause the submission to be included in the response.",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "webform_type_rfi;first_name;last_name"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "response"
                  },
                  "items": {
                    "$ref": "#/components/schemas/ApiResponse"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid or missing last_id value."
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Submission": {
        "required": [
          "id",
          "webform_id",
          "time"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "webform_id": {
            "type": "string",
            "example": "rfi_general_form"
          },
          "webform_url": {
            "type": "uri",
            "example": "https://www.worldcampus.psu.edu/act48"
          },
          "time": {
            "type": "string",
            "example": "2024-03-29 10:11:30"
          }
        },
        "additionalProperties": {
          "type": "string"
        },
        "xml": {
          "name": "sub"
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "response": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Submission"
            }
          }
        },
        "xml": {
          "name": "response"
        }
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "security": [
    {
      "basicAuth": []
    }
  ]
}
